<div class="container">
<div class="row">
<div class="col-sm-12">
<br><br><br><br>
<center><h3> 여러분의 쓰담쓰담을 공유해요 </h3></center><br><br><br><br>
</div><!-- /col-sm-12 -->
</div><!-- /row -->

 <% @posts.each do |post| %>

<div class="row">
<div class="col-sm-1">
<div class="thumbnail">
<img class="img-responsive user-photo" src="https://ssl.gstatic.com/accounts/ui/avatar_2x.png">
</div><!-- /thumbnail -->
</div><!-- /col-sm-1 -->

<div class="col-sm-11">
<div class="panel panel-default">
<div class="panel-heading">
<strong><%= post.talker %></strong> <span class="text-muted">짱이에요!</span>
</div>
<div class="panel-body">
<%= post.title %>  
			<div style="float: right;"><%= link_to 'Show', post_path(post) %>
   					<%= link_to 'Edit', edit_post_path(post) %>
   					<%= link_to 'Destroy', post_path(post),
                   		method: :delete, data: { confirm: 'Are you sure?' } %></div>
</div><!-- /panel-body -->
</div><!-- /panel panel-default -->
</div><!-- /col-sm-5 -->
</div><!-- /row -->
  
<% end %>
<div style="float: right;">
<button type="button" class="btn btn-default btn-lg" onclick="posts/new">
  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> New Post
</button>

<%= link_to 'New post', new_post_path %>
</div>
</div><!-- /container -->

