
<%= form_for([@post, @post.comments.build]) do |f| %>

 <p>
   <%= f.label :commenter %><br>
   <%= f.text_field :commenter %>
 </p>
 <p>
   <%= f.label :Comment %><br>
   <%= f.text_area :body, :cols => "70", :rows => "5" %>
 </p>
 
 <p>
 <button type="submit" class="[ btn btn-success disabled ]">Post comment</button>
 </p>
<% end %>